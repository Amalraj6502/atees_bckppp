<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_phonepe" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.phonepe</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_phone_pay_payment" 
                        string="Phone Pe" 
                        type="object" 
                        class="btn-primary" 
                        invisible="state not in ['draft', 'sent']"/>
            </xpath>
        </field>
    </record>
</odoo>
