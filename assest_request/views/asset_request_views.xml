<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_asset_request_list" model="ir.ui.view">
        <field name="name">asset.request.list</field>
        <field name="model">asset.request</field>
        <field name="arch" type="xml">
            <list string="Asset Requests">
                <field name="name" readonly="1"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="asset_type_ids" widget="many2many_tags"/>
                <field name="request_date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'approved'" decoration-warning="state == 'submitted'" decoration-danger="state == 'rejected'"/>
            </list>
        </field>
    </record>

    <record id="view_asset_request_form" model="ir.ui.view">
        <field name="name">asset.request.form</field>
        <field name="model">asset.request</field>
        <field name="arch" type="xml">
            <form string="Asset Request">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" invisible="state != 'submitted'" groups="assest_request.group_asset_request_manager"/>
                    <button name="action_reject" string="Reject" type="object" invisible="state != 'submitted'" groups="assest_request.group_asset_request_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" placeholder="Select Employee..."/>
                            <field name="department_id" placeholder="Select Department..."/>
                            <field name="reason" placeholder="Add Reason..."/>
                        </group>
                        <group>
                            <field name="request_date"/>
                            <field name="asset_type_ids" widget="many2many_tags" placeholder="Select Asset Types..."/>
                        </group>
                    </group>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_asset_request" model="ir.actions.act_window">
        <field name="name">Asset Requests</field>
        <field name="res_model">asset.request</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first asset request!
            </p>
        </field>
    </record>

    <menuitem id="menu_asset_request_root" 
              name="Asset Requests"
              parent="hr.menu_hr_root"
              />

<!--    <menuitem id="menu_asset_request_main" -->
<!--              name="Requests" -->
<!--              parent="menu_asset_request_root" -->
<!--              sequence="10"/>-->

    <menuitem id="menu_asset_request_action" 
              name="Asset Requests" 
              parent="menu_asset_request_root"
              action="action_asset_request" 
              sequence="10"/>

    <!-- Asset Type Views -->
    <record id="view_asset_type_list" model="ir.ui.view">
        <field name="name">asset.type.list</field>
        <field name="model">asset.type</field>
        <field name="arch" type="xml">
            <list string="Asset Types" editable="bottom">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="action_asset_type" model="ir.actions.act_window">
        <field name="name">Asset Types</field>
        <field name="res_model">asset.type</field>
        <field name="view_mode">list</field>
    </record>

<!--    <menuitem id="menu_asset_request_config" -->
<!--              name="Configuration" -->
<!--              parent="menu_asset_request_root" -->
<!--              sequence="100"-->
<!--              groups="assest_request.group_asset_request_manager"/>-->

    <menuitem id="menu_asset_type_action" 
              name="Asset Types" 
              parent="menu_asset_request_root"
              action="action_asset_type" 
              groups="assest_request.group_asset_request_manager"/>
</odoo>
