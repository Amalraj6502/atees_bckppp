<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_category_asset_request" model="ir.module.category">
            <field name="name">Asset Request</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_asset_request_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_asset_request"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_asset_request_manager" model="res.groups">
            <field name="name">Manager (HOD)</field>
            <field name="category_id" ref="module_category_asset_request"/>
            <field name="implied_ids" eval="[(4, ref('group_asset_request_user'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="rule_asset_request_user" model="ir.rule">
            <field name="name">Personal Asset Requests</field>
            <field name="model_id" ref="model_asset_request"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_asset_request_user'))]"/>
        </record>

        <record id="rule_asset_request_manager" model="ir.rule">
            <field name="name">Department Asset Requests</field>
            <field name="model_id" ref="model_asset_request"/>
            <field name="domain_force">['|', ('department_id.manager_id.user_id', '=', user.id), ('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_asset_request_manager'))]"/>
        </record>
    </data>
</odoo>
